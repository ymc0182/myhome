const { title } = Astro.props;
---

<!doctype html>
<html lang="zh" class="scroll-pt-16 md:scroll-pt-20 lg:scroll-pt-24 scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="https://cravatar.com/avatar/5FBB13B635295D1226A17B782951C309?s=400&f=mp">
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="view-transition" content="same-origin">
		<meta name="generator" content={Astro.generator} />
		<title>{title && title+" | "} 袁某人 - 个人主页</title>
		<meta name="keywords" content="袁某人,个人主页,jb18.cm,袁某人博客,yuanmren,yuanm.ren,个人导航,导航页">
