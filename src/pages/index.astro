const { PageTitle } = Astro.props;
---

<!doctype html>
<html lang="zh">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{PageTitle && PageTitle+" - "} 袁某人主页🫨</title>
        <link rel="icon" type="image/x-icon" href="https://cravatar.com/avatar/5FBB13B635295D1226A17B782951C309?s=400&amp;f=mp">
        <meta name="keywords" content="袁某人,个人主页,jb18.cm,袁某人博客,yuanmren,yuanm.ren,个人导航,导航页,个人网站">
        <meta name="description" content="袁某人的主页，袁某的个人网站">
    </head>
    <body ontouchstart="ontouchstart" class="min-h-screen font-sans">
        
        <div class="container mx-auto px-6">
            <section class="py-16">
                <h1 class="text-5xl font-extrabold mb-6">欢迎来到袁某的个人主页 🌟🌐</h1>
                <p class="text-slate-600 text-sm font-light leading-relaxed tracking-wide font-mono">👋 Hello! Welcome to wo.jb18.cm, 你可以在这看到的我连接的全部链接</p>
